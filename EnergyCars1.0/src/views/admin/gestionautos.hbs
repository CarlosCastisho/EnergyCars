                <h3>Marcas, Modelos y Año</h3>
                <!-- Formulario para agregar una nueva marca -->
                <form action="/admin/gestionautos/marca" method="POST">
                    <input type="text" name="mar_nombre" placeholder="Nombre de la marca" required>
                    <button class="btn btn-success">Agregar Marca</button>
                </form>
                <!-- Formulario para agregar un nuevo modelo -->
                <form action="/admin/gestionautos/modelo" method="POST">
                    <input type="text" name="mod_nombre" placeholder="Nombre del modelo" required>
                    <button class="btn btn-success">Agregar Modelo</button>
                </form>                      
                <!-- Formulario para agregar un nuevo año -->
                <form action="/admin/gestionautos/anio" method="POST">
                    <input type="number" name="n_anio" placeholder="Año" required>
                    <button class="btn btn-success">Agregar Año</button>
                </form> 
                        </div>                        
                <!-- Formulario para agregar un tipo de conector -->
