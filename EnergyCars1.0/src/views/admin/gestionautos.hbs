                    <input type="text" name="tc_nombre" placeholder="Tipo de conector" required>
                    <button class="btn btn-success">Agregar Conector</button>
                    <a href="/admin/vermarcas" class="btn btn-success">VER MARCAS</a>
                </form>
                


