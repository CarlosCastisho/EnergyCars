<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/auth/reserva" method="POST">

                        <div class="form-group my-3">
                            <label for="estc_nom_direcc" class="form-label">Estación de carga:</label>
                            <select id="estc_nom_direcc" class="form-control" name="estc_nom_direcc" required>
                                <option value="" disabled selected>Selecciona un estación</option>
                                {{#each estacionCarga}}
                                <option value="{{ID_ESTC}}">{{ESTC_NOMBRE}} - {{ESTC_DIRECCION}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group my-3">
                            <label for="reserva_fecha" class="form-label">Fecha:</label>
                            <input type="date" id="reserva_fecha" class="form-control" name="reserva_fecha">
                        </div>
                        <div class="form-group my-3">
                            <label for="reserva_hora_ini" class="form-label">Hora de inicio:</label>
                            <input type="time" id="reserva_hora_ini" class="form-control" name="reserva_hora_ini">
                        </div>
                        <div class="form-group my-3">
                            <label for="reserva_hora_time" class="form-label">Seleccione el tiempo de carga (minutos):</label>
                            <select id="reserva_hora_time" name="reserva_hora_time" onchange="calcularHoraFin(),costoEstimado()" required>
                                <option value="5">5 minutos</option>
                                <option value="10">10 minutos</option>
                                <option value="15">15 minutos</option>
                                <option value="30">30 minutos</option>
                                <option value="45">45 minutos</option>
                                <option value="60">60 minutos</option>
                            </select>
                        </div>
                        <div class="form-group my-3">
                            <label for="reserva_hora_fin" class="form-label">Hora de finalización:</label>
                            <input type="text" id="reserva_hora_fin" class="form-control" name="reserva_hora_fin" readonly>
                        </div>
                        <div class="form-group my-3">
                            <label for="reserva_importe" class="form-label">Importe:</label>
                            <input type="text" id="reserva_importe" class="form-control" name="reserva_importe" readonly>
                        </div>
                        <div class="form-group d-grid my-3">
                            <button class="btn btn-success">ACEPTAR</button>
                            <a href="/reserva" class="btn btn-danger my-2">CANCELAR</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>