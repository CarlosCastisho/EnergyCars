<div class="container p-4">
    <div class="row">
        <div class="mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Estaciones</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Dirección</th>
                                <th scope="col">Localidad</th>
                                <th scope="col">Provincia</th>                                
                                <th scope="col">N° surtidores</th>                                
                                <th scope="col">Acción</th>                                
                            </tr>
                        </thead>
                        <tbody>
                            {{#each estacionesCarga}}
                                <tr>
                                    <th scope="row"> {{ID_ESTC}} </th>
                                    <td> {{ESTC_NOMBRE}} </td>
                                    <td> {{ESTC_DIRECCION}} </td>
                                    <td> {{ESTC_LOCALIDAD}} </td>
                                    <td> {{PROVINCIA_NOMBRE}} </td>
                                    <td> {{ESTC_CANT_SURTIDORES}} </td>
                                    <td> <form action=""> <button class="btn btn-success">RESERVAR</button> </form> </td>
                                    
                                </tr>
                            {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>